<%- include ('header.html') %>

<% Body.forEach(function(data){ %>
	<% if(data.slug == quest) { %>
			<% key = Object.keys(data) %>
			<% values = Object.values(data) %>
	<% } %>
<% }) %>
<% for (var i=0; i<key.length; i++) { %>
	<% if (key[i] == 'quote') { %>
		<% quo_keys = Object.keys(values[i].USD) %>
		<% quo_values = Object.values(values[i].USD) %>
	<% } %>
<% } %>



<% for (var i=0; i<key.length; i++) { %>
	<% if (key[i] != 'quote') { %>
		<div class="row">
			<div class="col-sm-3"><%= key[i].toUpperCase() %></div>
			<div class="col-sm-3"><%= values[i] %></div>	
		</div>
	<% } %>
<% } %>
